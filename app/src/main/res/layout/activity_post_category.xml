<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".PostCategory">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_55.0_dp"
        android:layout_gravity="center"
        android:elevation="@dimen/px_10.0_dp"
        android:background="#ffffff">

        <ImageView
            android:layout_width="@dimen/px_30.0_dp"
            android:layout_height="@dimen/px_30.0_dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/px_10.0_dp"
            android:src="@drawable/ic_arrow_back_black"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_35.0_dp"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/px_10.0_dp"
            android:layout_marginRight="@dimen/px_20.0_dp"
            android:background="@drawable/edit_tv_search"
            android:layout_gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/px_30.0_dp"
                android:layout_height="@dimen/px_30.0_dp"
                android:padding="@dimen/px_1.0_dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/px_8.0_dp"
                android:src="@drawable/ic_search_black_24dp"
                android:layout_marginRight="@dimen/px_1.0_dp"/>
            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_30.0_dp"
                android:background="@null"
                android:ems="10"
                android:layout_gravity="center"
                android:inputType="text"
                android:textSize="@dimen/px_16.0_dp" />

        </LinearLayout>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/filter_dialog_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px_5.0_dp"
        android:layout_marginLeft="@dimen/px_10.0_dp"
        android:layout_marginRight="@dimen/px_10.0_dp"
        />

</LinearLayout>



</android.support.constraint.ConstraintLayout>