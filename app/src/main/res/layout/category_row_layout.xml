<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center|top|left"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_margin="5dp"
    app:cardElevation="@dimen/px_8.0_dp"
    app:cardBackgroundColor="@color/blue_500"
    app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_cat_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4363"
                android:paddingLeft="@dimen/px_8.0_dp"
                android:paddingRight="@dimen/px_8.0_dp"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        <ImageView
            android:layout_marginTop="@dimen/px_16.0_dp"
            android:id="@+id/img_cat"
            android:layout_width="@dimen/px_40.0_dp"
            android:src="@mipmap/header_icon_2"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/px_40.0_dp"
            android:layout_height="@dimen/px_40.0_dp"
            />

        </LinearLayout>
    </android.support.v7.widget.CardView>

